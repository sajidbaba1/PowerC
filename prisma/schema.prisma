// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique
  status    String   @default("active") // active, exhausted, inactive
  usage     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Profile {
  id            String   @id @default(cuid())
  role          String   @unique // sajid or nasywa
  name          String
  email         String?  // For event notifications
  avatarUrl     String?
  mood          String?  // Happy, Miss You, Tired, Need a Hug
  moodUpdatedAt DateTime?
  latitude      Float?
  longitude     Float?
  trackName     String?
  trackArtist   String?
  trackImage    String?
  isPlaying     Boolean  @default(false)
  ourSongUrl    String?
  updatedAt     DateTime @updatedAt
}

model Message {
  id               String   @id @default(cuid())
  text             String
  translation      String?
  hindiTranslation String?
  sender           String   // sajid or nasywa
  receiver         String   // nasywa, sajid or admin
  chatKey          String   // e.g., "nasywa-sajid"
  status           String   @default("sent")
  type             String   @default("text") // text, image, sticker, heart_firework, hug, kiss, audio, secret
  wordBreakdown    Json?    // Array of {word, hindi, meaning}
  imageUrl         String?
  audioUrl         String?
  unlockAt         DateTime? // For secret messages
  isPinned         Boolean  @default(false)
  parentId         String?  // For replies (stitching)
  reactions        Json?    // Array of {emoji, user}
  createdAt        DateTime @default(now())
}

model ThreadComment {
  id        String   @id @default(cuid())
  messageId String
  content   String
  author    String   // sajid or nasywa
  createdAt DateTime @default(now())
}

model GlobalSettings {
  id           String  @id @default("default")
  stopEffects  Boolean @default(false)
  updatedBy    String?
  updatedAt    DateTime @updatedAt
}

model JarNote {
  id        String   @id @default(cuid())
  content   String
  author    String   // sajid or nasywa
  createdAt DateTime @default(now())
}

model LoveNote {
  id        String   @id @default(cuid())
  content   String?
  imageUrl  String?
  sender    String
  x         Float    @default(0) // For positioning on the wall
  y         Float    @default(0)
  rotation  Float    @default(0)
  createdAt DateTime @default(now())
}

model Milestone {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  type      String   @default("anniversary") // anniversary, birthday, date, other
  createdAt DateTime @default(now())
}

model LoginHistory {
  id        String   @id @default(cuid())
  role      String   // sajid or nasywa
  timestamp DateTime @default(now())
}

model Image {
  id          String   @id @default(cuid())
  cloudinaryId String  // Cloudinary public_id
  url         String   // Cloudinary secure_url
  sender      String   // sajid or nasywa
  receiver    String   // sajid, nasywa, or admin
  viewType    String   @default("permanent") // "one-time" or "permanent"
  viewed      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model ChatActivity {
  id           String   @id @default(cuid())
  date         String   @unique // Format: YYYY-MM-DD
  sajidActive  Boolean  @default(false)
  nasywaActive Boolean  @default(false)
  messageCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PlaylistSong {
  id        String   @id @default(cuid())
  url       String
  title     String
  effect    String
  chatKey   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
}
model Activity {
  id               String   @id @default(cuid())
  text             String   @db.Text
  translation      String?  @db.Text
  hindiTranslation String?  @db.Text
  wordBreakdown    Json?    // Array of { word, translation, meaning }
  imageUrl         String?  @db.Text
  sender           String   // 'sajid' or 'nasywa'
  status           String   @default("pending") // "pending", "completed"
  date             String   // Format: YYYY-MM-DD
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  comments         ActivityComment[]
  reactions        Json?    // Array of { emoji, user }
}

model ActivityComment {
  id         String   @id @default(cuid())
  text       String   @db.Text
  sender     String
  activityId String
  activity   Activity @relation(fields: [activityId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
}
